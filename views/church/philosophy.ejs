<!DOCTYPE html>
<html lang="ko">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/header') %>

        <div class="container" style="padding-top: 100px; padding-bottom: 50px;">
            <h1 class="text-center">목회철학</h1>
            <div class="section-title"></div>

            <% if (locals.user && user.isAdmin) { %>
                <div style="text-align: right; margin-bottom: 1rem;">
                    <% if (typeof philosophy !=='undefined' && philosophy.id) { %>
                        <a href="/admin/edit/philosophies/<%= philosophy.id %>" class="btn btn-primary">수정하기</a>
                        <% } else { %>
                            <a href="/admin/write/philosophies" class="btn btn-primary">작성하기</a>
                            <% } %>
                </div>
                <% } %>

                    <div style="max-width: 800px; margin: 0 auto; line-height: 1.8; font-size: 1.1rem;">
                        <%- typeof philosophy !=='undefined' ? philosophy.content : '내용이 없습니다.' %>
                    </div>
        </div>

        <%- include('../partials/footer') %>
            <script src="/js/main.js"></script>
</body>

</html>