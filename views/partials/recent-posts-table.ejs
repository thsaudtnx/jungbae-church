<div class="post-nav-section" data-aos="fade-up">
    <% if (locals.prevItem) { %>
        <a href="/<%= basePath %>/<%= prevItem.id %>" class="post-nav-item post-nav-prev">
            <div class="post-nav-direction">
                <i class="fas fa-chevron-up"></i>
                <span>이전 글</span>
            </div>
            <div class="post-nav-info">
                <span class="post-nav-title">
                    <%= prevItem.title %>
                </span>
                <span class="post-nav-date">
                    <%= prevItem.date %>
                </span>
            </div>
        </a>
        <% } else { %>
            <div class="post-nav-item post-nav-empty">
                <div class="post-nav-direction">
                    <i class="fas fa-chevron-up"></i>
                    <span>이전 글</span>
                </div>
                <span class="post-nav-none">이전 글이 없습니다</span>
            </div>
            <% } %>

                <% if (locals.nextItem) { %>
                    <a href="/<%= basePath %>/<%= nextItem.id %>" class="post-nav-item post-nav-next">
                        <div class="post-nav-direction">
                            <i class="fas fa-chevron-down"></i>
                            <span>다음 글</span>
                        </div>
                        <div class="post-nav-info">
                            <span class="post-nav-title">
                                <%= nextItem.title %>
                            </span>
                            <span class="post-nav-date">
                                <%= nextItem.date %>
                            </span>
                        </div>
                    </a>
                    <% } else { %>
                        <div class="post-nav-item post-nav-empty">
                            <div class="post-nav-direction">
                                <i class="fas fa-chevron-down"></i>
                                <span>다음 글</span>
                            </div>
                            <span class="post-nav-none">다음 글이 없습니다</span>
                        </div>
                        <% } %>
</div>

<style>
    .post-nav-section {
        margin-top: 4rem;
        border-top: 1px solid #f1f5f9;
        max-width: 850px;
        margin-left: auto;
        margin-right: auto;
    }

    .post-nav-item {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 1.4rem 2rem;
        border-bottom: 1px solid #f1f5f9;
        text-decoration: none;
        transition: background 0.2s ease;
        background: white;
    }

    .post-nav-item:first-child {
        border-top: 1px solid #f1f5f9;
    }

    a.post-nav-item:hover {
        background: #f8fafc;
    }

    a.post-nav-item:hover .post-nav-title {
        color: var(--color-primary);
    }

    .post-nav-direction {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
        min-width: 52px;
        color: var(--color-primary);
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.02em;
        opacity: 0.75;
    }

    .post-nav-direction i {
        font-size: 0.85rem;
    }

    .post-nav-info {
        display: flex;
        flex-direction: column;
        gap: 4px;
        flex: 1;
        min-width: 0;
    }

    .post-nav-title {
        font-size: 1rem;
        font-weight: 600;
        color: #334155;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        transition: color 0.2s ease;
    }

    .post-nav-date {
        font-size: 0.83rem;
        color: #94a3b8;
    }

    .post-nav-empty {
        cursor: default;
    }

    .post-nav-none {
        font-size: 0.95rem;
        color: #cbd5e1;
    }

    @media (max-width: 768px) {
        .post-nav-item {
            padding: 1.2rem 1.25rem;
            gap: 1rem;
        }

        .post-nav-title {
            font-size: 0.92rem;
        }
    }
</style>