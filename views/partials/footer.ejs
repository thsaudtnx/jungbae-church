    <style>
        .premium-footer {
            background-color: #f9fafb;
            color: #4b5563;
            padding: 5rem 0 3rem;
            font-size: 0.95rem;
            border-top: 1px solid #e5e7eb;
        }

        .footer-top {
            display: grid;
            grid-template-columns: 1.2fr 2.5fr 1fr;
            gap: 3rem;
            margin-bottom: 4rem;
        }

        .footer-logo {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 1.2rem;
        }

        .footer-church-name-text {
            font-size: 1.5rem;
            font-weight: 800;
            color: var(--color-text);
            letter-spacing: -0.02em;
        }

        .footer-slogan {
            color: var(--color-primary);
            font-weight: 700;
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }

        .footer-description {
            line-height: 1.7;
            font-size: 0.9rem;
            color: #6b7280;
        }

        .footer-nav-grid {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 2rem;
        }

        .footer-nav-col h4,
        .footer-contact-info h4 {
            color: var(--color-text);
            font-size: 1.1rem;
            font-weight: 700;
            margin-bottom: 1.8rem;
            position: relative;
        }

        .footer-nav-col h4::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -8px;
            width: 30px;
            height: 2px;
            background: var(--color-primary);
            opacity: 0.6;
        }

        .footer-nav-col ul li {
            margin-bottom: 0.8rem;
        }

        .footer-nav-col ul li a {
            transition: all 0.3s ease;
            display: inline-block;
            color: #6b7280;
        }

        .footer-nav-col ul li a:hover {
            color: var(--color-primary);
            transform: translateX(5px);
        }

        .contact-item {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            margin-bottom: 1.2rem;
            color: #4b5563;
        }

        .contact-item span {
            white-space: nowrap;
        }

        .contact-item i {
            color: var(--color-primary);
            opacity: 0.7;
            margin-top: 4px;
            font-size: 1.1rem;
        }

        .footer-social-premium {
            display: flex;
            gap: 12px;
            margin-top: 2rem;
        }

        .footer-social-premium a {
            width: 38px;
            height: 38px;
            background: #ffffff;
            border: 1px solid #e5e7eb;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6b7280;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            font-size: 1.1rem;
        }

        .footer-social-premium a:hover {
            background: #ffffff;
            color: #ffffff;
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            border-color: transparent;
        }

        .footer-social-premium a.yt:hover {
            background: #ff0000;
        }

        .footer-social-premium a.ig:hover {
            background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
        }

        .footer-social-premium a.fb:hover {
            background: #1877f2;
        }

        .footer-bottom {
            padding-top: 2rem;
            border-top: 1px solid #e5e7eb;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .footer-copyright {
            font-size: 0.85rem;
            color: #9ca3af;
        }

        .footer-admin-area {
            display: flex;
            gap: 1.5rem;
        }

        .admin-link,
        .admin-login-link {
            font-size: 0.85rem;
            color: #9ca3af;
            text-decoration: none;
            transition: color 0.3s;
        }

        .admin-link:hover,
        .admin-login-link:hover {
            color: var(--color-primary);
        }

        .admin-link.active {
            color: var(--color-primary);
            font-weight: 700;
            opacity: 0.8;
        }

        @media (max-width: 992px) {
            .footer-top {
                grid-template-columns: 1fr 1fr;
                gap: 3rem;
            }

            .footer-brand {
                grid-column: span 2;
                text-align: center;
                display: flex;
                flex-direction: column;
                align-items: center;
            }
        }

        @media (max-width: 768px) {
            .premium-footer {
                padding: 4rem 1.5rem 2.5rem;
            }

            .footer-top {
                grid-template-columns: 1fr;
                gap: 3rem;
                text-align: center;
            }

            .footer-brand {
                grid-column: auto;
            }

            .footer-nav-grid {
                gap: 2rem;
            }

            .footer-nav-col h4::after {
                left: 50%;
                transform: translateX(-50%);
            }

            .contact-item {
                justify-content: center;
            }

            .footer-social-premium {
                justify-content: center;
            }

            .footer-bottom {
                flex-direction: column;
                text-align: center;
            }

            .footer-admin-area {
                justify-content: center;
            }
        }
    </style>

    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            if (typeof AOS !== 'undefined') {
                AOS.init({
                    duration: 800,
                    easing: 'ease-out-cubic',
                    once: true,
                    offset: 50
                });
            }
        });

        window.addEventListener('beforeunload', () => {
            if (typeof NProgress !== 'undefined') {
                NProgress.start();
            }
        });
    </script>