<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>정배교회</title>
<meta name="description" content="<%= typeof description !== 'undefined' ? description : '일상에 스미는 하나님 나라, 정배교회입니다.' %>">

<!-- Open Graph / SEO -->
<meta property="og:type" content="website">
<meta property="og:title"
    content="<%= typeof ogTitle !== 'undefined' ? ogTitle : (typeof title !== 'undefined' ? title : '정배교회') %>">
<meta property="og:description"
    content="<%= typeof ogDescription !== 'undefined' ? ogDescription : (typeof description !== 'undefined' ? description : '일상에 스미는 하나님 나라, 정배교회입니다.') %>">
<meta property="og:image" content="<%= typeof ogImage !== 'undefined' ? ogImage : '/images/main-logo.png' %>">
<meta property="og:url" content="<%= typeof ogUrl !== 'undefined' ? ogUrl : 'https://jungbae-church.vercel.app' %>">
<meta property="og:site_name" content="정배교회">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<link rel="stylesheet" href="/css/style.css">
<link rel="icon" type="image/jpeg" href="/images/church-favicon.jpeg?v=2">
<link rel="apple-touch-icon" href="/images/church-favicon.jpeg">
<link rel="stylesheet" as="style" crossorigin
    href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
