  <script>
    // Live Indicator Logic (Based on KST - Korean Standard Time)
    function checkLiveStatus() {
      // Create a date object for the current time
      const now = new Date();

      // Calculate KST (UTC+9)
      const utc = now.getTime() + (now.getTimezoneOffset() * 60000);
      const kstTime = new Date(utc + (3600000 * 9));

      const day = kstTime.getDay(); // 0 is Sunday
      const hours = kstTime.getHours();
      const minutes = kstTime.getMinutes();
      const timeVal = hours * 100 + minutes;

      let isLive = false;

      // Sunday Worship: 08:50 ~ 12:30, 13:20 ~ 15:00
      if (day === 0) {
        if ((timeVal >= 850 && timeVal <= 1230) || (timeVal >= 1320 && timeVal <= 1500)) {
          isLive = true;
        }
      }
      // Wednesday Worship: 19:20 ~ 21:00
      if (day === 3) {
        if (timeVal >= 1920 && timeVal <= 2100) {
          isLive = true;
        }
      }

      document.getElementById('live-banner').style.display = isLive ? 'block' : 'none';
    }

    checkLiveStatus();
    setInterval(checkLiveStatus, 60000); // Check every minute
  </script>