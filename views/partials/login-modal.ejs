<!-- Premium Login Modal -->
<div id="login-modal" class="login-modal" onclick="closeLoginModal()">
    <div class="login-modal-content" onclick="event.stopPropagation()">
        <button class="login-modal-close" onclick="closeLoginModal()">
            <i class="fas fa-times"></i>
        </button>

        <div class="login-modal-header">
            <div class="login-logo">
                <img src="/images/main-logo.png" alt="정배교회 로고">
            </div>
            <h3>관리자 로그인</h3>
            <p>정배교회 관리 도구에 액세스하려면 비밀번호를 입력하세요.</p>
        </div>

        <form id="login-form" class="login-form">
            <div class="form-group">
                <label for="modal-password">비밀번호</label>
                <div class="password-input-wrapper">
                    <input type="password" id="modal-password" name="password" placeholder="비밀번호를 입력하세요" required>
                    <button type="button" class="toggle-password" onclick="toggleModalPassword()">
                        <i id="password-toggle-icon" class="far fa-eye"></i>
                    </button>
                </div>
            </div>

            <div id="login-error" class="login-error-msg"></div>

            <button type="submit" id="login-submit-btn" class="login-submit-btn">
                <span>로그인</span>
                <div class="login-spinner"></div>
            </button>
        </form>

        <div class="login-modal-footer">
            <p>&copy; 2026 정배교회. 일상에 스미는 하나님 나라.</p>
        </div>
    </div>
</div>

<script>
    function openLoginModal(e) {
        if (e) e.preventDefault();
        const modal = document.getElementById('login-modal');
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';

        // Focus password input after animation
        setTimeout(() => {
            document.getElementById('modal-password').focus();
        }, 300);
    }

    function closeLoginModal() {
        const modal = document.getElementById('login-modal');
        modal.classList.remove('active');
        document.body.style.overflow = '';

        // Clear inputs and errors
        document.getElementById('login-form').reset();
        document.getElementById('login-error').innerText = '';
        document.getElementById('modal-password').type = 'password';
        document.getElementById('password-toggle-icon').className = 'far fa-eye';
    }

    function toggleModalPassword() {
        const x = document.getElementById("modal-password");
        const icon = document.getElementById("password-toggle-icon");
        if (x.type === "password") {
            x.type = "text";
            icon.className = 'far fa-eye-slash';
        } else {
            x.type = "password";
            icon.className = 'far fa-eye';
        }
    }

    document.getElementById('login-form').addEventListener('submit', async function (e) {
        e.preventDefault();

        const password = document.getElementById('modal-password').value;
        const errorMsg = document.getElementById('login-error');
        const submitBtn = document.getElementById('login-submit-btn');

        errorMsg.innerText = '';
        submitBtn.classList.add('loading');

        try {
            const response = await fetch('/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify({ password })
            });

            const result = await response.json();

            if (result.success) {
                // Success - reload or redirect
                location.reload();
            } else {
                // Fail
                errorMsg.innerText = result.message || '비밀번호가 틀렸습니다.';
                submitBtn.classList.remove('loading');

                // Vibrate effect on error
                const modalContent = document.querySelector('.login-modal-content');
                modalContent.classList.add('shake');
                setTimeout(() => modalContent.classList.remove('shake'), 500);
            }
        } catch (err) {
            console.error('Login error:', err);
            errorMsg.innerText = '로그인 중 오류가 발생했습니다.';
            submitBtn.classList.remove('loading');
        }
    });

    // Close on Escape key
    document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape' && document.getElementById('login-modal').classList.contains('active')) {
            closeLoginModal();
        }
    });
</script>

